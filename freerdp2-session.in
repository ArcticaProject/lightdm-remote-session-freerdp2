socket="$HOME/.freerdp2-socket";
if [ -e "$socket" ]; then
	socat unix-connect:"$socket" - | /usr/bin/xfreerdp /sound:sys:pulse /f /from-stdin
else
	zenity --warning --text="Unable to locate FreeRDP socket"
fi;

rm -f "$socket"
